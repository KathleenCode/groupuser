<!doctype html>

<html lang="en">

<%-include('./partials/head.ejs')%>

  <body>

    <%-include('./partials/nav.ejs')%>

   <div class="container bg-info-subtle">
    <div class="row align-items-center justify-content-center my-5">
        <div class="col-lg-6 border border-primary-subtle p-4">
            <form action="/users" method="POST" enctype="multipart/form-data"> <!-- to use images use enctype -->
                <div class="mb-3">
                    <label for="first" class="form-label">FirstName</label>
                    <input class="form-control shadow p-3 mb-5 bg-body-tertiary rounded" type="text" name="firstName" id="formFile">
                  </div>
                  <div class="mb-3">
                    <label for="last" class="form-label">LastName</label>
                    <input class="form-control shadow p-3 mb-5 bg-body-tertiary rounded" type="text" name="lastName" id="formFileMultiple" multiple>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control shadow p-3 mb-5 bg-body-tertiary rounded" type="email" name="email" id="formFile">
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input class="form-control shadow p-3 mb-5 bg-body-tertiary rounded" type="text" name="phone" id="formFile">
                  </div>
                  <div class="mb-3">
                    <label for="image" class="form-label">Profile Pic</label>
                    <input class="form-control form-control-sm shadow p-3 mb-5 bg-body-tertiary rounded" type="file" id="formFileSm"  name="image">
                  </div>
                  <div class="mb-3 text-center">
                    <button class="btn btn-success">Submit</button>
                  </div>
            </form>
        </div>
    </div>
   </div>

    <%-include('./partials/foot.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>

</html>